@using passgen.Components
@inherits LayoutComponentBase

<PageTitle>Onerdy's Password Generator</PageTitle>

<MyMudThemeProvider />

<div class="page mud-layout">
     <main style="@($"background-color:{MyMudThemeProvider.MyTheme.Palette.Tertiary};")
     width: 100%;
    height: 100%;
    margin: 0px;
    padding: 0px;
    overflow-x: auto;
    overflow-y: auto;">
        <MudPaper Elevation="10" Square="true" Style="@($"background-color:{MyMudThemeProvider.MyTheme.Palette.Primary};")">
            <MudStack Row="true">
                <MudImage Src="PassGenLogo128.png"></MudImage>
                <MudStack>
                    <MudText Typo="Typo.h5" Color="Color.Secondary">Onerdy's</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Secondary">Password</MudText>
                    <MudText Typo="Typo.h5" Color="Color.Secondary">Generator</MudText>
                </MudStack>
            </MudStack>
        </MudPaper>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="my-1 pt-1">
            @Body
        </MudContainer>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>